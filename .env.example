# ByteRisto Development Environment Configuration
# Copy this to .env in each service directory for local development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672

# Redis Configuration (for Analytics service)
REDIS_URL=redis://localhost:6379

# Service URLs
MENU_SERVICE_URL=http://localhost:3001
ORDER_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3003
ANALYTICS_SERVICE_URL=http://localhost:3004

# Flask Environment
FLASK_ENV=development

